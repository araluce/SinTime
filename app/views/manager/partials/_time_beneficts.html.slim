  fieldset
    .row
      .col-12
        legend = custom_label
.row
  .col-3
    = f.input "days_#{suffix}".to_sym, input_html: {type: 'number', value: seconds_to_days(f.object.send("time_#{suffix}")), min: 0}, label: 'DÃ­as'
  .col-3
    = f.input "hours_#{suffix}".to_sym, input_html: {type: 'number', value: seconds_to_hours(f.object.send("time_#{suffix}")), min: 0}, label: 'Horas'
  .col-3
    = f.input "minutes_#{suffix}".to_sym, input_html: {type: 'number', value: seconds_to_minutes(f.object.send("time_#{suffix}")), min: 0}, label: 'Minutos'
