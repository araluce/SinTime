$('.exercise-slot-js').html('<%= j(render 'padawan/js_templates/render_exercise') %>');

<%- if @response %>
  var datetime = new Date('<%= @tdv %>');
  countdown_date = new Date(datetime);
  $('.countdown').removeClass('highlight').countdown('option', {until: countdown_date});

<%- else %>
  <%= render 'application/alert.js.erb', alert_class: 'danger', text: 'Se produjo un error' %>
<%- end %>