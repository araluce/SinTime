<%- if @tweets && @tweets.any? %>
  $('.tweet-loader').html('<%= j(render 'padawan/partials/tweet') %>')
<%- end %>
<%- if @tweets_count %>
  $('.tweets_count').html('<%= "#{@tweets_count}/#{@max_tweets_per_day}" %>')
<%- end %>
<%- if @error %>
  <%= render 'application/alert.js.erb', alert_class: 'notice', text: @error %>
<%- end %>