.row
  .col-12.future-card
    .row style="margin-bottom: 1%;"
      .col-12
        = link_to fa_icon('fw chevron-circle-left', text: 'Volver'), padawan_formacion_path, class: 'btn btn-border-black pull-right'
    .row
      .col-12
        .table-responsive
          table.table
            thead.thead-light
              tr
