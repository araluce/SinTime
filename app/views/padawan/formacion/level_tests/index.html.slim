                th
            tbody
              - @objects.each do |object|
                tr class="#{object.is_complete? ? 'table-danger' : 'table-success'}"
                  td = link_to "#{object.is_complete? ? 'Cerrada' : 'Abierta'}", edit_padawan_formacion_level_test_path(object)
                  td = link_to object.title.titleize, edit_padawan_formacion_level_test_path(object)
                  td = link_to "#{object.exercise_users.count}/#{object.max_applicants}", edit_padawan_formacion_level_test_path(object)
                  td = link_to seconds_to_s(object.time_benefit), edit_padawan_formacion_level_test_path(object)
                  td
                    - if current_user.exercise_users.where(exercise: object).empty?
                      - unless object.is_complete?
                        = link_to 'Comprar!', padawan_formacion_level_test_purchase_path(object), class: 'btn btn-block btn-primary'
                    - else
                      = link_to fa_icon('fw cog'), edit_padawan_formacion_level_test_path(object), class: 'btn btn-block btn-primary'

